<UserControl x:Class="ReferenceManager.Views.ListItems"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReferenceManager.Views"
             xmlns:viewhelpers="clr-namespace:ReferenceManager.ViewHelpers"
             mc:Ignorable="d" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ListView ItemsSource="{Binding Items}">
            <ListView.View>
                <GridView viewhelpers:GridViewColumnCollection.HeaderTextMember="HeaderText" 
                          viewhelpers:GridViewColumnCollection.DisplayMemberMember="DisplayMember"
                        viewhelpers:GridViewColumnCollection.ColumnsSource="{Binding ColumnDefinitions}">
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
